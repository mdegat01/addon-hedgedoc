{
  "name": "Hedgedoc",
  "url": "https://github.com/mdegat01/addon-hedgedoc",
  "version": "edge",
  "slug": "hedgedoc",
  "arch": ["aarch64", "amd64", "armv7"],
  "description": "Hedgedoc for Home Assistant",
  "services": ["mysql:want"],
  "map": ["ssl"],
  "webui": "[PROTO:ssl]://[HOST]:[PORT:3000]",
  "watchdog": "[PROTO:ssl]://[HOST]:3000/status",
  "ports": {
    "3000/tcp": 3000
  },
  "ports_description": {
    "3000/tcp": "HTTP listen port"
  },
  "options": {
    "ssl": false,
    "access": {
      "domain": "homeassistant.local",
      "add_port": true,
      "session_secret": null,
      "session_days": 30
    },
    "log_level": "info",
    "env_vars": []
  },
  "schema": {
    "ssl": "bool?",
    "certfile": "str?",
    "keyfile": "str?",
    "dhparamfile": "str?",
    "access": {
      "domain": "match([^\\/:]+)?",
      "use_ssl": "bool?",
      "add_port": "bool?",
      "session_secret": "password?",
      "session_days": "int(1,)?"
    },
    "remote_mysql_host": "str?",
    "remote_mysql_port": "port?",
    "remote_mysql_username": "str?",
    "remote_mysql_password": "password?",
    "remote_mysql_database": "str?",
    "reset_database": "bool?",
    "env_vars": [
      {
        "name": "match(^CMD_([A-Z0-9_])+$)",
        "value": "str"
      }
    ],
    "log_level": "list(debug|info|warning|error)?"
  }
}
